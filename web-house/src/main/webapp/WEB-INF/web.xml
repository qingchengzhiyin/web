<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>MyApp</display-name>


  <!-- Define the servlet -->
  <servlet>
    <servlet-name>AdminUserServlet</servlet-name>
    <servlet-class>com.servlet.AdminUserServlet</servlet-class>
  </servlet>
  <!-- Map the servlet to a URL pattern -->
  <servlet-mapping>
    <servlet-name>AdminUserServlet</servlet-name>
    <url-pattern>/admin/users</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminHouseServlet</servlet-name>
    <servlet-class>com.servlet.AdminHouseServlet</servlet-class>
  </servlet>
  <!-- Map the servlet to a URL pattern -->
  <servlet-mapping>
    <servlet-name>AdminHouseServlet</servlet-name>
    <url-pattern>/admin/houses</url-pattern>
  </servlet-mapping>




  <!-- Optionally, you can configure a welcome file list -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file> <!-- Your default welcome file -->
  </welcome-file-list>

</web-app>
